    "latex-workshop.latex.magic.args": [
        "-f",
        "-gg",
        "-pv",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.ist",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.synctex.gz",
        "_minted*",
        "*.nav",
        "*.snm",
        "*.vrb"
    ],
    "latex-workshop.linting.chktex.enabled": false,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    // "latex-workshop.latex.recipe.default": "latexmk",
    "latex-workshop.latex.recipe.default": "LuaLaTeX",
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.intellisense.package.enabled": true,
    "[latex]": {
        "editor.wordWrap": "on",
        "editor.wrappingIndent": "same",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.tabCompletion": "on",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        // "editor.formatOnSave": false,
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "[tex]": {
        "editor.wordWrap": "on",
        "editor.wrappingIndent": "same",
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.tabCompletion": "on",
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.formatOnSave": false,
        "editor.tabSize": 2,
    },

    "markdown-preview-enhanced.scrollSync": false,
    "git.confirmSync": false,
    "editor.suggest.showSnippets": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "editor.fontWeight": "normal",
    "git.autoRepositoryDetection": "openEditors",
    "[dart]": {
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "editor.rulers": [
            80
        ],
        "editor.selectionHighlight": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off",
        // "editor.inlayHints.enabled": "offUnlessPressed", // Ctrl+Optionを押すとインレイヒントを表示
    },
    // ---start TypeScriptのinlay hintsの設定---
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
    "typescript.inlayHints.parameterTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "[typescript]": {
        "editor.inlayHints.enabled": "offUnlessPressed",
    },
    // ---end TypeScriptのinlay hintsの設定---
    "editor.inlayHints.enabled": "offUnlessPressed",    // 全言語に対するインレイヒント (inlay hints) 有効化
    "vim.easymotion": true,
    // もともとeasymotionのキー一覧に","や";"があったが、押しにくいので消した
    "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    // 以下４つは、vimでノーマルモード時に英字入力にするための設定。
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.defaultIM": "com.google.inputmethod.Japanese.Roman",
    "vim.autoSwitchInputMethod.obtainIMCmd": "/opt/homebrew/bin/im-select",
    "vim.autoSwitchInputMethod.switchIMCmd": "/opt/homebrew/bin/im-select {im}",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-n>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        // `leader f`を全体(前方・後方)単語検索 に割り当てる
        {
            "before": ["<leader>", "f"],
            "after": ["<leader>", "<leader>", "<leader>", "b", "d", "w"],
        },
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-w>": false,
        "<C-c>": false
    },
    "vim.surround": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.associations": {
        "*.md": "markdown",
        ".cursorrules": "markdown"
    },
    "markdown.copyFiles.destination": {
        "*": "./images",
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "on",
            "strings": "on",
            "other": "on"
        },
        "editor.tabSize": 2
    },
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.linkedEditing": true,
    "cmake.showOptionsMovedNotification": false,
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.formatOnSave": false,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": "true",
        "scminput": false,
        "dart": "true"
    },
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "{hexdiff}:/**/*.*": "hexEditor.hexedit",
        "*.pdf": "latex-workshop-pdf-hook"
    },
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "github.copilot.editor.enableAutoCompletions": true,
    "markdown-preview-enhanced.hideDefaultVSCodeMarkdownPreviewButtons": false,
    "markdown-preview-enhanced.enablePreviewZenMode": true,
    "editor.fontFamily": "'Droid sans mono', 'Noto Sans JP'",
    "settingsSync.ignoredSettings": [
        "editor.fontFamily",
        "terminal.integrated.fontFamily"
    ],
    "git.autofetch": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "NOTE",
        "[ ] TODO"
    ],
    "terminal.integrated.fontFamily": "'Droid sans mono', monospace",
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "scminput"
    ],
    "workbench.colorTheme": "Default Dark Modern",
    "gitlens.ai.experimental.model": "openai:gpt-4o",
    "workbench.activityBar.orientation": "vertical",
    "dart.flutterSdkPaths": [
